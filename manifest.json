{
	// 清单文件的版本，这个必须写，而且必须是2
	"manifest_version": 2,
	"name": "jdtry",
	"version": "1.0.0",
	"description": "jd try",
	"icons": {
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	"background": {
		"page": "background.html",
		"persistent": true
	},
	"content_scripts": [{
		"matches": ["*://*.jd.com/*"],
		"js": ["static/content-script.js"],
		"css": ["style/content-script.css"],
		"run_at": "document_end",
		"all_frames": true
	}],
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "popup.html"
	},
	// 权限申请
	"permissions": [
		"*://*.jd.com/*",
		"notifications",
		"storage",
		"alarms"
	]
}
